@model IEnumerable<eSnacks.Models.City>

@{
    ViewData["Title"] = "Index";
}



<table class="table table-hover text-center caption-top">
    <caption>
        <h1 class="py-3">List of cities</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary my-3">Create New</a>
        </p>
    </caption>
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            Operations
        </th>
    </tr>
    </thead>
    <tbody class="table-group-divider align-middle">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
