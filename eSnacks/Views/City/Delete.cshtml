@model eSnacks.Models.City

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-5 mb-3">Delete city</h1>
<h4 class="my-3">Are you sure you want to delete this city?</h4>
<hr/>

<div class="my-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
    </dl>

    <form asp-action="Delete" class="my-5">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="mx-3 btn btn-outline-primary">Back to List</a>
    </form>
</div>
